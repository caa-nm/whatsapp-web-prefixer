{
  "manifest_version": 3,
  "name": "WhatsApp Web Prefix",
  "version": "1.0",
  "description": "Adicionar Prefixo no WhatsApp Web.",
  "permissions": ["storage", "tabs", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ]
}